<div class="container">
  <div class="text-center encabezado-seccion">
    <h1>Registra el nombre de tu servicio y el costo de este</h1>
  </div>

    <div class="formulario">

    <%= form_tag :action => 'MedicosRegistrarServicio' do %>

      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Servicio</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'servicio' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Costo</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'costo' %>
        </div>
      </div>


      <br><br>
      <div class="enviar">
        <%= submit_tag 'Registrarse' %>
      </div>


  <% end %>

  </div>
</div>
