// Find the state select box
var dcity = document.getElementById("doctor_city");

// Clear the options in the select box
while (dcity.firstChild) city.removeChild(dcity.firstChild);

// Add a placeholder
var placeholder = document.createElement("option");
placeholder.text = "Ciudad";
placeholder.value = "";
dcity.appendChild(placeholder);

// Add the states
<% @dcities.each do |c| %>
    dcity.options[dcity.options.length] = new Option('<%= c %>');
<% end %>

