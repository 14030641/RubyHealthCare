// Find the state select box
var city = document.getElementById("doctor_city");
if ( city == null )
{
    city = document.getElementById("patient_city");
}
// Clear the options in the select box
while (city.firstChild) city.removeChild(city.firstChild);

// Add a placeholder
var placeholder = document.createElement("option");
placeholder.text = "Ciudad";
placeholder.value = "";
city.appendChild(placeholder);

// Add the states
if(city == document.getElementById("doctor_city"))
{
    <% @dcities.each do |c| %>
        city.options[city.options.length] = new Option('<%= c %>');
    <% end %>
}else{
    <% @pcities.each do |c| %>
        city.options[city.options.length] = new Option('<%= c %>');
    <% end %>
}