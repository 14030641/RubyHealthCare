<div class="container">
    <div class="formulario">

    <%= form_tag :action => 'RegistroPacientes' do %>

      <p class="seccion">Datos primordiales</p>

      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Nombre</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'nombre' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Apellido paterno</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'apePaterno' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Apellido materno</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'apeMaterno' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Fecha de Nacimiento</label>
        </div>
        <div class="col-md-3">
          <%= date_field_tag 'fechaNacimiento' %>
        </div>
      </div>


      <br><br>
      <p class="seccion">Donde vive</p>

      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Dirección</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'direccion' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">País</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'pais' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Estado</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'estado' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Municipio</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'municipio' %>
        </div>
      </div>

      <br><br>
      <p class="seccion">Datos de inicio de contacto</p>

      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Teléfono móvil</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'telMovil' %>
        </div>
      </div>

      <br><br>
      <p class="seccion">Datos respecto a su salud</p>

      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Alergias</label>
        </div>
        <div class="col-md-3">
          <%= text_area_tag 'alergias' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Enfermedades crónicas</label>
        </div>
        <div class="col-md-3">
          <%= text_area_tag 'enfCronicas' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Cirugías</label>
        </div>
        <div class="col-md-3">
          <%= text_area_tag 'cirugias' %>
        </div>
      </div>

      <br><br>
      <p class="seccion">Datos de inicio de sesión</p>

      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Usuario</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'usuario' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <label class="texto-form">Contraseña</label>
        </div>
        <div class="col-md-3">
          <%= text_field_tag 'contrasenia' %>
        </div>
      </div>


      <br><br>
      <div class="enviar">
        <%= submit_tag 'Registrarse' %>
      </div>


  <% end %>

  </div>
</div>
