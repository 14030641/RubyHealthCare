<div class="shadow">
    <h1>Crear servicio</h1>
    <%= form_for(@service) do |f| %>
        <% @service.errors.full_messages.each do |message| %>
            <div class="field">
            * <%= message%>
            </div>
        <%end%>
        <div class="field">
            <%= f.label :Servicio %><br />
            <%= f.text_field :name, placeholder: "Nombre del servicio"%>
        </div>
        <div class="field">
            <%= f.label :Descripción %><br />
            <%= f.text_area :description, placeholder: "Descripción del servicio"%>
        </div>
        <div class="field">
            <%= f.submit "Guardar"%>
        </div>
    <%end%>
    <p></p>
</div>