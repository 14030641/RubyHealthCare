<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%-# Nombre y Apellidos -%>
  <div class="row">
    <div class="col-sm-2 field">
      <%= f.label :'Nombre(s)' %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="col-sm-2 field">
      <%= f.label :'Apellido(s)' %><br />
      <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname" %>
    </div>
  </div>
<p></p>
<%-# Fecha de nacimiento y Numero telefonico -%>
  <div class="row">
    <div class="col-sm-2 field">
      <%= f.label :Fecha_de_Nacimiento %><br />
      <%= f.date_field :birth, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="col-sm-2 field">
      <%= f.label :Numero_de_Teléfono %><br />
      <%= f.text_field :cellphone, autofocus: true%>
    </div>
  </div>
<p></p>
<%-# Alergias, enfermedades cronicas y cirugía -%>
  <div class="row">
    <div class="col-sm-2 field">
      <%= f.label :Alergias %><br />
      <%= f.text_area :allergy, :cols => 45, :rows => 5 %>
    </div>
  </div>
<p></p>
<div class="row">
    <div class="col-sm-2 field">
      <%= f.label :Enfermedades_cronicas %>
      <%= f.text_area :chronic_diseases, :cols => 45, :rows => 5 %>
    </div>
  </div>
<p></p>
<div class="row">
    <div class="col-sm-2 field">
      <%= f.label :Cirugía_recibida %>
      <%= f.text_area :surgeries, :cols => 45, :rows => 5  %>
    </div>
  </div>
<p></p>
<%-# Pais -%>
  <div class="row">
    <div class="col-sm-5 field">
      <%= f.label :Pais %>
      <em>(Una vez elegido seleccione su estado y despues su ciudad)</em>
      <%= f.select :country, options_for_select(CS.countries.map { |c| [c[1], c[0]] } ) %>
    </div>
  </div>
<p></p>
<%-# Estado -%>
  <div class="row">
    <div class="col-sm-1 field">
      <%= f.label :Estado %>
      <%= f.select :state, options_for_select([])  %>
    </div>
  </div>
<p></p>
<%-# Ciudad -%>
  <div class="row">
    <div class="col-sm-1 field">
      <%= f.label :Ciudad %>
      <%= f.select :city,  options_for_select([]) %>
    </div>
  </div>
<p></p>
<%-# Dirección y correo -%>
  <div class="row">
    <div class="col-sm-2 field">
      <%= f.label :Dirección %><br />
      <%= f.text_field :address, autofocus: true %>
    </div>
    <div class="col-sm-2 field">
      <%= f.label :Email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
<p></p>
<%-# Contraseñas -%>
  <div class="row">
    <div class="col-sm-2 field">
      <%= f.label :Contraseña %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimo)</em>
      <% end %><br />
    </div>
    <div class="col-sm-2 field">
      <%= f.label :Confirmar_contraseña%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "patients/shared/links" %>
