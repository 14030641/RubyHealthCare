<%if doctor_signed_in? %>
    <div class = "shadow">
        <h3>Bienvenido <%= current_doctor.name %></h3>
        <h2>Mis Consultas</h2>
        <%= render 'consults/see'%>
        <br>
        <div class="digg_pagination">
            <%= will_paginate @consults, :container => false %>
        </div>
    </div>
<%else%>
    <%if patient_signed_in? %>
        <div class = "shadow">
            <h3>Bienvenido <%= current_patient.name %></h3>
            <h2>Consultas Respondidas</h2>
            <div class="digg_pagination">
            <%= will_paginate @consults, :container => false %>
            </div>
            <%= render 'consults/see'%>
            <br>
        </div>
    <%else%>
        <div class="container">
            <div class="row text-center">
                <div class="col-sm-4">
                    <h3><%=link_to "Ingresar como Medico", new_doctor_session_path%></h3>
                </div>
                <div class="col-sm-5">
                    <h3><%=link_to "Ingresar como Paciente", new_patient_session_path%></h3>
                </div>
            </div>
            <p></p>
        </div>
    <%end%>
<%end%>